<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_main.xml - Main layout for the EmotiLog application

    Purpose:
    Defines the UI structure for the main activity, including emoticon buttons,
    log display, and summary section.

    Design Rationale:
    - Uses ScrollView to accommodate all content on smaller screens
    - Grid layout (3x2) for emoticon buttons for easy thumb access
    - Large, colorful buttons for quick emotion logging
    - RecyclerView for efficient display of emotion history
    - Summary section at bottom for statistics display
    - Modern Material Design principles with colors and spacing

    Outstanding Issues:
    - Button sizes may need adjustment for very small screens
    - Could add more spacing between sections on tablets
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EmotiLog"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How are you feeling?"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:paddingBottom="24dp"/>

        <!-- Emoticon Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="8dp">

            <!-- Happy Button -->
            <Button
                android:id="@+id/btnHappy"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="😊\nHappy"
                android:textSize="18sp"
                android:backgroundTint="#FFD54F"
                android:textColor="#000000"/>

            <!-- Sad Button -->
            <Button
                android:id="@+id/btnSad"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="😢\nSad"
                android:textSize="18sp"
                android:backgroundTint="#90CAF9"
                android:textColor="#000000"/>

            <!-- Grateful Button -->
            <Button
                android:id="@+id/btnGrateful"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="🙏\nGrateful"
                android:textSize="18sp"
                android:backgroundTint="#CE93D8"
                android:textColor="#000000"/>

            <!-- Angry Button -->
            <Button
                android:id="@+id/btnAngry"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="😠\nAngry"
                android:textSize="18sp"
                android:backgroundTint="#EF5350"
                android:textColor="#FFFFFF"/>

            <!-- Excited Button -->
            <Button
                android:id="@+id/btnExcited"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="🎉\nExcited"
                android:textSize="18sp"
                android:backgroundTint="#FF7043"
                android:textColor="#000000"/>

            <!-- Tired Button -->
            <Button
                android:id="@+id/btnTired"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="😴\nTired"
                android:textSize="18sp"
                android:backgroundTint="#A5D6A7"
                android:textColor="#000000"/>

        </GridLayout>

        <!-- View Summary Button -->
        <Button
            android:id="@+id/btnViewSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="📊 View Summary"
            android:textSize="16sp"
            android:backgroundTint="#5C6BC0"
            android:textColor="#FFFFFF"/>

        <!-- Summary Display -->
        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="monospace"
            android:visibility="gone"
            android:elevation="2dp"/>

        <!-- Recent Logs Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Logs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <!-- RecyclerView for Logs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLogs"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="8dp"/>

    </LinearLayout>

</ScrollView>