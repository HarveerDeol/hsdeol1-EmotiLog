<?xml version="1.0" encoding="utf-8"?>
<!--
    colors.xml - Color resources for the EmotiLog app

    Purpose:
    Defines color palette for consistent theming throughout the app.

    Design Rationale:
    - Warm, friendly colors for positive emotions (yellow, orange)
    - Cool, calm colors for sad/tired emotions (blue, green)
    - Red for strong emotions (anger)
    - Purple for gratitude (spiritual/calming)
    - Accessible contrast ratios for text readability
-->
<resources>
    <!-- Primary Colors -->
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>

    <!-- Base Colors -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Emotion Button Colors -->
    <color name="emotion_happy">#FFD54F</color>
    <color name="emotion_sad">#90CAF9</color>
    <color name="emotion_grateful">#CE93D8</color>
    <color name="emotion_angry">#EF5350</color>
    <color name="emotion_excited">#FF7043</color>
    <color name="emotion_tired">#A5D6A7</color>

    <!-- UI Colors -->
    <color name="background_light">#F5F5F5</color>
    <color name="card_background">#FAFAFA</color>
    <color name="text_primary">#333333</color>
    <color name="text_secondary">#666666</color>
